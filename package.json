{
  "name": "pmm-ui-tests",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/percona/pmm-ui-tests.git"
  },
  "workspaces": [
    "cli"
  ],
  "scripts": {
    "lint:cli": "npm run lint --workspace=cli",
    "lint:root": "eslint .",
    "lint:tests": "eslint tests/",
    "lint:all": "npm run lint:root && npm run lint:cli && npm run lint:tests ",
    "e2e": "npx codeceptjs run-multiple parallel --debug --steps --reporter mocha-multi -c pr.codecept.js --grep '(?=.*)^(?!.*@not-ui-pipeline)^(?!.*@not-pr-pipeline)'",
    "e2e:ia": "npx codeceptjs run -c pr.codecept.js --grep '@fb-alerting'",
    "e2e:stt": "npx codeceptjs run -c pr.codecept.js --grep '@stt'",
    "e2e:grafana-pr": "npx codeceptjs run -c pr.codecept.js --grep '@grafana-pr'"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@pagerduty/pdjs": "^2.2.4",
    "@playwright/test": "^1.53.2",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.6.2",
    "@types/mocha": "^10.0.10",
    "adm-zip": "^0.5.16",
    "axios": "1.10.0",
    "build-url": "^6.0.1",
    "chai": "^5.2.0",
    "codeceptjs": "3.7.3",
    "codeceptjs-chai": "^2.3.5",
    "codeceptjs-dbhelper": "^1.2.2",
    "codeceptjs-mailosaurhelper": "^1.0.5",
    "codeceptjs-postgresqlhelper": "^1.0.1",
    "form-data": "^4.0.3",
    "generate-password": "^1.7.1",
    "globals": "^16.3.0",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "mocha": "^11.7.1",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi": "^1.1.7",
    "moment": "2.30.1",
    "mongodb": "^6.17.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.1",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "shelljs": "^0.10.0",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/shelljs": "^0.8.17",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dotenv": "^17.0.1",
    "eslint": "9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  }
}
